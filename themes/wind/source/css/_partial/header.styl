#header
  height: banner-height
  position: relative
  &:before, &:after
    content: ""
    position: absolute
    left: 0
    right: 0
    height: 40px
  &:before
    top: 0
    background: linear-gradient(rgba(0, 0, 0, 0.2), transparent)
  &:after
    bottom: 0
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.2))

#header-outer
  height: 100%
  position: relative

#header-inner
  display: flex
  justify-content: space-between

#banner
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: #000
  object-fit: cover
  z-index: -1

#header-title
  text-align: center
  height: logo-size
  position: absolute
  top: 50%
  left: 0
  margin-top: logo-size * -0.5

$logo-text
  text-decoration: none
  color: #fff
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3)

#logo
  @extend $logo-text
  font-size: logo-size
  line-height: logo-size
  letter-spacing: 2px
  font-family: Georgia

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  font-family: Cascadia Mono
  color: #b3b3b3

#subtitle-wrap
  margin-top: subtitle-size

#main-nav
  float: left
  margin-left: -15px

$nav-link
  float: left
  color: #fff
  opacity: 0.6
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: opacity 0.2s
  display: block
  padding: 20px 15px
  &:hover
    opacity: 1

.nav-icon
  @extend $nav-link
  font-family: font-icon
  text-align: center
  font-size: font-size
  width: font-size
  height: font-size
  padding: 20px 15px
  position: relative
  cursor: pointer

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block

#sub-nav
  float: right
  margin-right: -15px

#dark-switch
  &:before
    content: "\f042"

#nav-search-btn
  &:before
    content: "\f002"

.dropdown
  position: relative
  perspective: 1000px
  &:hover
    background: #2980b9
    cursor: pointer
  &:hover .dropdown-menu a
    display: block

.dropdown-menu
  position: absolute
  top: 100%
  left: 0
  for num in (1..5)
    .dropdown-item-{num}
      animation: rotateZ 300ms (num * 60ms) ease-in-out forwards
  a
    display: none
    background-color: #34495e
    padding: 15px 20px
    opacity: 0
    color: white
    text-decoration: none
    &:hover
      background-color: #2980b9

@keyframes rotateZ {
  0% {
    opacity: 0;
    transform: translateZ(290px);
  }
  80% {
    transform: translateZ(10px);
  }
  100% {
    opacity: 1;
    transform: translateZ(0);
  }
}