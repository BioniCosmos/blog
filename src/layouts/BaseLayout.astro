---
import ReturnButton from '../components/ReturnButton.astro'
import '../styles/font-han.css'
import FooterLayout from './FooterLayout.astro'
import HeaderLayout, { type Props as HeaderProps } from './HeaderLayout.astro'

type Props = { title?: string } & HeaderProps

const { title, ...headerProps } = Astro.props

function getTitle(base: string) {
  return title?.concat(` | ${base}`) ?? base
}
